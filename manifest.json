{
  "manifest_version": 3,
  "name": "ModernPDF Viewer",
  "description": "Redirects PDFs into the ModernPDF annotator and streams bytes to bypass CORS.",
  "version": "1.0.0",
  "action": {
    "default_title": "ModernPDF Viewer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["webRequest", "webRequestBlocking"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["pdf.html", "sample.pdf"],
      "matches": ["<all_urls>"]
    }
  ]
}
